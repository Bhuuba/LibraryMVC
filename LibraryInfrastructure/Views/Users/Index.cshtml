@model IEnumerable<LibraryDomain.Model.User>

@{
    ViewData["Title"] = "Головна сторінка";
    Layout = "~/Views/Shared/_Layout.cshtml"; // переконайтесь, що у вас є цей layout
}

<style>
    .user-card {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        text-align: center;
    }

        .user-card h3 {
            color: #007bff;
            margin-bottom: 10px;
        }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

</style>
<div class="container">
    <h2 class="text-center">Користувачі сайту</h2>

    <div class="text-center mb-3">
        <a asp-controller="Users" asp-action="Create" class="btn btn-success">Створити користувача</a>
    </div>

    <div class="row">
        @if (Model != null && Model.Any()) // Model - це IEnumerable<User>
        {
            foreach (var user in Model)
            {
                <div class="col-md-4 mb-3">
                    <!-- 3 картки в ряд на великих екранах -->
                    <div class="card p-3">
                        <h3>@user.Name</h3>
                        <p><strong>Email:</strong> @user.Email</p>
                        <p><strong>Статус:</strong> @user.Status</p>
                        <div class="btn-group">
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Редагувати</a>
                            <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-secondary">Деталі</a>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Видалити</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Користувачів поки немає.</p>
        }
    </div>




    </div>

