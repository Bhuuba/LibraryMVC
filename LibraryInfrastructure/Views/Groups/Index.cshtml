@model IEnumerable<LibraryDomain.Model.Group>

@{
    ViewData["Title"] = "Групи";
}

<style>
    .groups-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .search-form {
        flex-grow: 1;
        max-width: 600px;
        position: relative;
    }

    .search-input {
        width: 100%;
        padding: 0.8rem 1.5rem;
        border: 2px solid #e0e0e0;
        border-radius: 25px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .search-input:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0,123,255,0.2);
            outline: none;
        }

    .search-button {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #6c757d;
    }

    .create-group-btn {
        background: #007bff;
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

        .create-group-btn:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }

    .groups-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 1px 15px rgba(0,0,0,0.1);
    }

    .table-header {
        background: #f8f9fa;
        border-bottom: 2px solid #e9ecef;
    }

        .table-header th {
            padding: 1.2rem;
            text-align: left;
            font-weight: 600;
            color: #495057;
        }

    .group-row {
        border-bottom: 1px solid #e9ecef;
        transition: all 0.2s ease;
    }

        .group-row:hover {
            background: #f8f9fa;
        }

        .group-row td {
            padding: 1.2rem;
            color: #212529;
        }

    .group-name {
        font-weight: 500;
        color: #1a1a1a;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-details {
        background: #28a745;
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    .btn-edit {
        background: #ffc107;
        color: black;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        text-decoration: none;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        text-decoration: none;
    }

    .no-groups {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
        background: #f8f9fa;
        border-radius: 10px;
        margin-top: 1rem;
    }
</style>

<div class="groups-container">
    <div class="header-section">
        <h1>Групи</h1>
        <form asp-action="Search" method="get" class="search-form">
            <input type="text"
                   name="query"
                   class="search-input"
                   placeholder="Пошук за назвою групи..."
                   value="@ViewData["CurrentFilter"]">
            <button type="submit" class="search-button">
                <i class="bi bi-search"></i>
            </button>
        </form>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="create-group-btn">
                <i class="bi bi-plus-lg"></i>
                Нова група
            </a>
        }
    </div>

    <table class="groups-table">
        <thead class="table-header">
            <tr>
                <th>Назва</th>
                <th>Опис</th>
                <th>Дата створення</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr class="group-row">
                        <td class="group-name">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Info)</td>
                        <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="UserGroup" asp-route-id="Create" class="btn-details">
                                    <i class="bi bi-eye"></i>
                                    Приєднатись
                                </a> 
                                <a asp-action="Create" asp-route-id="@item.Id" class="btn-details">
                                    <i class="bi bi-eye"></i>
                                    Створити
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-details">
                                    <i class="bi bi-eye"></i>
                                    Деталі
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="no-groups">
                        <i class="bi bi-info-circle" style="font-size: 2rem;"></i>
                        <p style="margin-top: 1rem;">Груп не знайдено</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>